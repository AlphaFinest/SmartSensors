@model IEnumerable<UserViewModel>
@{
    ViewBag.Title = "AllUsers";
}
<h2>All Users</h2>
<table id="myTable" class="table table-striped table-dark table-bordered table-hover">
    <thead>
        <tr>
            <th>Status</th>
            <th>User</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
            {
            <tr>
                @if (m.IsAdmin)
                {
                    <td><i class="fa fa-user-plus" aria-hidden="true"></i></td>
                }
                else
                {
                    <td><i class="fa fa-user" aria-hidden="true"></i></td>
                }
                <td>@m.Username</td>
                <td>@m.Email</td>
                <td>@Html.ActionLink("Edit", "EditUser", new { username = m.Username })</td>
            </tr>
        }
    </tbody>
</table>

@section grid
        {
    <script type="text/javascript" src="http://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>

}

