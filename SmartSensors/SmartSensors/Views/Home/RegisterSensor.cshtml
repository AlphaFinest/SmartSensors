@{
    ViewBag.Title = "Register new sensor";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<form class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-sm-2" for="email">Name:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="email" placeholder="Enter name">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="pwd">Description:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="pwd" placeholder="Enter description">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="pwd">URL:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="pwd" placeholder="Enter URL">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="pwd">Pooling time:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="pwd" placeholder="Enter polling time">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="pwd">Measurement:</label>
        <div class="dropdown">
            <button class="btn btn-default" type="button" data-toggle="dropdown">Pick
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li><a href="#">Temperature</a></li>
                <li><a href="#">Humidity</a></li>
                <li><a href="#">Electricity</a></li>
                <li><a href="#">Occupancy</a></li>
                <li><a href="#">Door</a></li>
                <li><a href="#">Noise</a></li>
            </ul>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <label><input type="checkbox"> Public sensor</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>