<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/dark-admin-css")

    <link rel="stylesheet" type="text/css" href="http://www.shieldui.com/shared/components/latest/css/light-bootstrap/all.min.css" />
    <link id="gridcss" rel="stylesheet" type="text/css" href="http://www.shieldui.com/shared/components/latest/css/dark-bootstrap/all.min.css" />

</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Smart Sensors", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul id="active" class="nav navbar-nav side-nav">
                    <li><a href="@Url.Action("index", "home", new { area = String.Empty })"><i class="fa fa-globe"></i> Home</a></li>
                    <li><a href="@Url.Action("publicsensors", "sensor", new { area = String.Empty })"><i class="fa fa-server"></i> Public Sensors</a></li>
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <li><a href="@Url.Action("registersensor", "sensor", new { area = String.Empty })"><i class="fa fa-font"></i> Register Sensor</a></li>
                    }
                    @if (this.User.IsInRole("Admin"))
                    {
                        <li><a href="@Url.Action("adminpage", "admin", new { area = "Admin" })"><i class="fa fa-font"></i> Register Sensor</a></li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </nav>
        <div id="page-wrapper">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year Alpha Finests Smart Sensors</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/dark-admin-js")
  
    @RenderSection("scripts", required: false)
    @RenderSection("grid", required: false)
</body>
</html>
