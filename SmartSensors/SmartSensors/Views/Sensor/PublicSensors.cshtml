@model IEnumerable<SmartSensors.Models.PublicViewModels>
@{
    ViewBag.Title = "PublicSensors";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-bar-chart-o"></i> All Public Sensors </h3>
            </div>
            <div class="panel-body">
                <div id="shieldui-grid1"></div>
            </div>
        </div>
    </div>
</div>
@section grid
        {
    <script type="text/javascript">
        $(function ($) {
            var sensors = [];
               @foreach (var mos in Model)
                {

                 @:sensors.push({"Username": "@mos.Owner.UserName", "SensorName":"@mos.SensorName" , "Value":"@mos.Value"})

                }

            $("#shieldui-grid1").shieldGrid({
                dataSource: {
                    data: sensors
                },
                sorting: {
                    multiple: true
                },
                rowHover: true,
                paging: true,
                columns: [
                    { field: "Username", width: "170px", title: "Username" },
                    { field: "SensorName", title: "Sensor Name" },
                    { field: "Value", title: "Value" }
                ]
            });
        });
    </script>
}



